	<insert id="insert"   parameterType="orderVO" >
		<![CDATA[
			insert into orders(orderdate,ordermethod,product_name,
			quantity,order_group_no) 
			values(SYSDATE,#{ordermethod},#{product_name},#{quantity},
			#{order_group_no})
		]]>
	</insert>
	
	<select id="order_group_no" resultType="long" >
		<![CDATA[
			select order_group_no_seq.nextval from dual
		]]>
	</select>	

	<select id="select" resultType="orderVO" >
		<![CDATA[
			select orderdate,ordermethod,product_name,quantity,order_group_no 
			from orders 
			where output=0 order by order_group_no
		]]>
	</select>
	
	<update id="update" parameterType="long" >
		<![CDATA[
			update orders
			set output=1
			where order_group_no=#{order_group_no}
		]]>
	</update>
	
</mapper>







